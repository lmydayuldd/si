package com.sidc.blackcore.sits.test;

import java.io.IOException;

import org.apache.http.HttpResponse;
import org.apache.http.client.ClientProtocolException;
import org.apache.http.client.HttpClient;
import org.apache.http.client.methods.HttpPost;
import org.apache.http.entity.StringEntity;
import org.apache.http.impl.client.HttpClients;
import org.apache.http.util.EntityUtils;
import org.junit.Test;

import com.derex.cm.stb.api.request.APIRequest;
import com.google.gson.Gson;
import com.sidc.blackcore.api.sits.token.bean.TokenSignBean;
import com.sidc.blackcore.api.sits.token.request.MobileTokenCheckRequest;

public class MobileTokenCheckTest {

	@Test
	public void test() {
		TokenSignBean tokenSignBean = new TokenSignBean("608", "10.60.6.8");
		MobileTokenCheckRequest mobileTokenCheckRequest = new MobileTokenCheckRequest(
				"79baa103-4116-4890-986a-838c241fc3f1", tokenSignBean);

		HttpClient httpclient = HttpClients.createDefault();
		HttpPost httppost = new HttpPost("http://127.0.0.1:8080/blackcore/mobiletokencheck");

		APIRequest enity = new APIRequest(mobileTokenCheckRequest);
		Gson gson = new Gson();
		String json = gson.toJson(enity);

		try {
			StringEntity entity = new StringEntity(json, "UTF-8");
			httppost.setEntity(entity);
			HttpResponse response = httpclient.execute(httppost);
			String result = EntityUtils.toString(response.getEntity());
			System.out.println(result);
		} catch (ClientProtocolException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
